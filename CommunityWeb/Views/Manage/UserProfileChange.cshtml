@using Microsoft.AspNet.Identity
@using CommunityWeb.Models

@model CommunityWeb.Models.UserChangeProfileModel
@*@model IEnumerable<CommunityWeb.Models.UserChangeProfileModel>*@
@{
    ViewBag.Title = "UserProfileChange";
}

<h2>UserProfileChange</h2>

@using (Html.BeginForm("UserProfileChange", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Your Current Picture</label>
        <img id="imgOld" src="~/ProfilePicture/@ViewBag.OldImg" alt="Old Profile Picture" width="100" height="100"/>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.NewImgURL, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.NewImgURL, new { style = "display:none" })

        <p>@ViewBag.test</p>
   
        <img class="col-md-10" id="imgNew" src="#" alt="New Profile Picture" style="color:red" />
        
        <div class="col-md-pull-10">
            <input type="file" name="pictureUpload" id="pictureUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
                $(document).ready(function () {
                    $("#pictureUpload").change(function (event) {
                        $("#NewImgURL").val($(this).val());
                        var path = URL.createObjectURL(event.target.files[0]);
                        $("#imgNew").attr('src', path);
                        $("#imgNew").css({ width: 200, height: 200 });

                    });
                });
    </script>
}

